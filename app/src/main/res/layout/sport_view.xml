<?xml version="1.0" encoding="utf-8"?>



    <!--
    xml correspondant a la recycler view des sports pratique
    Material card view pour un affichage plus beau
    -->


    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:clickable="true"
        android:focusable="true"
        android:checkable="true">

        <!--
        Linear layout pour organiser au sein de la card view
         -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="16dp">


            <TextView
                android:id="@+id/sport"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Un sport" />

            <TextView
                android:id="@+id/isDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sport"
                android:text="en distance ?" />

            <View
                android:id="@+id/couleurIsDistance"
                android:layout_width="70dp"
                android:layout_height="5dp"
                android:background="@color/colortRed"
                android:layout_below="@id/isDistance"
                android:layout_marginTop="0dp"/>

            <TextView
                android:id="@+id/isTemps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/couleurIsDistance"
                android:text="en temps ?" />

            <View
                android:id="@+id/couleurIsTemps"
                android:layout_width="70dp"
                android:layout_height="5dp"
                android:background="@color/colortRed"
                android:layout_below="@+id/isTemps"
                android:layout_marginTop="0dp"
            />



        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>

