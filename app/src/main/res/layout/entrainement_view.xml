<?xml version="1.0" encoding="utf-8"?>


    <!--
    xml correspondant a la material card des entrainements
    Material card view pour un affichage plus beau
    -->

    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:clickable="true"
        android:focusable="true"
        android:checkable="true">

        <!--
        Linear layout pour organiser au sein de la card view
         -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/sportEnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


            <TextView
                android:id="@+id/dateEnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               />




            <TextView
                android:id="@+id/distanceEnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:id="@+id/tempsEnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>

